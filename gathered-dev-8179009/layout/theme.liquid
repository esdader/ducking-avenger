  {{ 'bootstrap.modal.min.js' | asset_url | script_tag }}
  <script>
    $('#donate-modal-btn').on('click', function(e) {
        $('#donate-modal').modal('show');
        e.preventDefault();
    });
    
  </script>
{% endif %}

<script type="text/javascript" src="//assets.pinterest.com/js/pinit.js"></script>
