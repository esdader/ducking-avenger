<div class="inner shop-intro">
	<h1>Shop</h1>
</div>
<div class="inner">
	<nav class="shop-subnav column">
		<h1>Artist</h1>
			<div class="subnav-children current">
				{% for link in linklists.artists-menu.links %}
					<a href="{{ link.url }}">{{ link.title }}</a>
				{% endfor %}
			</div>
		<h1>Type of Art</h1>
			<div class="subnav-children">
				{% for link in linklists.type-of-art-menu.links %}
					<a href="{{ link.url }}">{{ link.title }}</a>
				{% endfor %}
			</div>
		{% if linklists.collections-menu.links.size > 0 %}
			<h1>Collections</h1>
				<div class="subnav-children">
					{% for link in linklists.collections-menu.links %}
						<a href="{{ link.url }}">{{ link.title }}</a>
					{% endfor %}
				</div>
		{% endif %}
	</nav>
	<section class="shop-artists shop-main-content column test-2">
		{% for link in linklists.artists-menu.links %}
		<article class="shop-type-listing">
			<h1><a href="{{ link.url }}">{{ link.object.title }}</a></h1>
			<a href="{{ link.url }}" class="view-all">View All &gt;</a>
			{% assign imageLength = link.object.products.length %}

			<div class="carousel-container hide-prev-btn
			{% if imageLength < 5 %} hide-next-btn{% endif %}"
			{% if imageLength > 4  and  imageLength < 12 %} data-scrub-length="true" {% endif %}>
    		<div class="carousel carousel-small">
      			<div class="carousel-inner">
	        		{% for product in link.object.products %}
	        			<a href="{{ product.url | within: collection }}"><img src="{{ product.featured_image | product_img_url: 'compact' }}" /></a>
	        		{% endfor %}
         		</div>
    		</div>
    		<a href="#previous" class="slider-btns prev left ir">Previous</a>
    		<a href="#next" class="slider-btns next right ir">Next</a>
  		</div>
		</article>
		{% endfor %}
	</section>
</div>